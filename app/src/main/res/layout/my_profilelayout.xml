<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"></android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_img"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:drawingCacheQuality="high"
                android:padding="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/on_gallary"
                android:src="@drawable/camera"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/profile_img"
                android:layout_alignEnd="@+id/profile_img"
                android:layout_marginTop="40dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold|normal" />

        <LinearLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:paddingLeft="25dp"
                android:fontFamily="sans-serif-light"
                android:paddingRight="15dp"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:paddingEnd="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>


            <TextView
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:fontFamily="sans-serif-light"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:drawablePadding="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:paddingStart="25dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/profile_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cmts_bg"
                android:hint="@string/fname"
                android:fontFamily="sans-serif-light"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="64"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/profile_txtlname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cmts_bg"
                android:hint="@string/lname"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="64"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray" />

            <eslglobal.com.esl.adapter.NoDefaultSpinner
                android:id="@+id/spinner_country"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cmts_bg"
                android:drawablePadding="10dp"
                android:maxLength="64"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <eslglobal.com.esl.adapter.NoDefaultSpinner
                android:id="@+id/spinner_state"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cmts_bg"
                android:drawablePadding="10dp"
                android:maxLength="64"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <eslglobal.com.esl.adapter.NoDefaultSpinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cmts_bg"
                android:drawablePadding="10dp"
                android:maxLength="64"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/save_profile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/template_bt_red_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="Save Profile"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>